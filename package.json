{
  "name": "webcomponent-markdown",
  "version": "0.2.2",
  "description": "Web Component for rendering Markdown, using Remark",
  "type": "module",
  "source": "src/index.tsx",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "unpkg": "./dist/index.umd.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "microbundle",
    "dev": "microbundle watch",
    "prepack": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keplersj/wc-markdown.git"
  },
  "keywords": [
    "markdown",
    "custom-elements",
    "remark",
    "unified",
    "web-components"
  ],
  "author": "Kepler Sticka-Jones <kepler@stickajones.org>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/keplersj/wc-markdown/issues"
  },
  "homepage": "https://github.com/keplersj/wc-markdown#readme",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "@atomico/hooks/use-slot": "<rootDir>/node_modules/@atomico/hooks/src/use-slot/use-slot.js"
    },
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "snapshotSerializers": [
      "jest-serializer-html"
    ],
    "setupFiles": [
      "./setupJest.cjs"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@storybook/addon-actions": "6.4.10",
    "@storybook/addon-essentials": "6.4.10",
    "@storybook/addon-links": "6.4.10",
    "@storybook/html": "6.4.10",
    "@testing-library/dom": "8.11.1",
    "@types/jest": "27.4.0",
    "@types/jsdom": "16.2.14",
    "babel-loader": "8.2.3",
    "jest": "27.4.7",
    "jest-fetch-mock": "3.0.3",
    "jest-serializer-html": "7.1.0",
    "microbundle": "^0.14.2",
    "node-fetch": "3.1.0",
    "storybook-builder-vite": "0.1.13",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4",
    "vite": "2.7.10"
  },
  "dependencies": {
    "@atomico/hooks": "^3.20.2",
    "atomico": "^1.34.0",
    "hast-to-hyperscript": "^10.0.1",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^10.0.1",
    "strip-indent": "^4.0.0",
    "unified": "^10.1.0"
  }
}
